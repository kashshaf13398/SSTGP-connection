<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="top">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="163dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="43dp"
        android:contentDescription="@string/todo"
        app:srcCompat="@drawable/icon_imageview" />

    <Button
        android:id="@+id/change_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/display_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp"
        android:background="@color/colorAccent"
        android:text="Change Image" />

    <TextView
        android:id="@+id/display_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="51dp"
        android:text="Display Name"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/change_name_editText"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Change Name"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/change_name_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/change_name_editText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="save" />

</RelativeLayout>